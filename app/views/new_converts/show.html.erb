<!-- app/views/new_converts/show.html.erb -->
<h1>Convert Details</h1>

<p><strong>First Name:</strong> <%= @new_convert.first_name %></p>
<p><strong>Last Name:</strong> <%= @new_convert.last_name %></p>
<p><strong>Gender:</strong> <%= @new_convert.gender.capitalize %></p>
<p><strong>Date of Birth:</strong> <%= @new_convert.date_of_birth %></p>
<p><strong>Primary Contact:</strong> <%= @new_convert.contact_number_1 %></p>
<p><strong>Secondary Contact:</strong> <%= @new_convert.contact_number_2 %></p>

<h3>Location Details</h3>
<p><strong>House Number:</strong> <%= @new_convert.house_number %></p>
<p><strong>Landmark:</strong> <%= @new_convert.landmark %></p>
<p><strong>Area:</strong> <%= @new_convert.area %></p>
<p><strong>City:</strong> <%= @new_convert.city %></p>

<h3>Other Key Contact</h3>
<p><strong>Name:</strong> <%= @new_convert.other_contact_name %></p>
<p><strong>Contact Number:</strong> <%= @new_convert.other_contact_number %></p>
<p><strong>Relationship:</strong> <%= @new_convert.other_contact_relationship %></p>

<h3>Inviter Details</h3>
<p><strong>Name:</strong> <%= @new_convert.inviter_name %></p>
<p><strong>Contact:</strong> <%= @new_convert.inviter_contact %></p>

<h3>Assigned Basenta</h3>
<p><strong>Basenta:</strong> <%= @new_convert.basenta.name %></p>

<%= link_to 'Back', new_converts_path, class: 'btn btn-secondary mt-3' %>
