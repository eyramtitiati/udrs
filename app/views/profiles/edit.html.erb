<!-- app/views/profiles/edit.html.erb -->
<h1>Edit Your Profile</h1>

<%= form_with(model: @user, url: profile_path, local: true) do |f| %>
  <div class="form-floating mb-3">
    <%= f.email_field :email, class: "form-control", id: "floatingEmail", placeholder: "Email" %>
    <%= f.label :email, "Email", for: "floatingEmail" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, class: "form-control", id: "floatingPassword", placeholder: "New Password" %>
    <%= f.label :password, "New Password (leave blank if you don't want to change it)", for: "floatingPassword" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, class: "form-control", id: "floatingPasswordConfirmation", placeholder: "Confirm New Password" %>
    <%= f.label :password_confirmation, "Confirm New Password", for: "floatingPasswordConfirmation" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :current_password, class: "form-control", id: "floatingCurrentPassword", placeholder: "Current Password" %>
    <%= f.label :current_password, "Current Password (required to make changes)", for: "floatingCurrentPassword" %>
  </div>

  <div class="d-grid gap-2">
    <%= f.submit "Update Profile", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= link_to 'Back to Profile', profile_path, class: 'btn btn-secondary mt-3' %>
